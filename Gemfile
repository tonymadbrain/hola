source 'https://rubygems.org'
ruby '2.3.0'

# Classy web-development dressed in a DSL (http://www.sinatrarb.com/)
gem 'sinatra'
# Dummy gem, sinatra-namespace is now part of sinatra-contrib. (http://github.com/sinatra/sinatra-contrib)
gem 'sinatra-namespace'

# Pg is the Ruby interface to the {PostgreSQL RDBMS}[http://www.postgresql.org/] (https://bitbucket.org/ged/ruby-pg)
gem 'pg'
# Object-relational mapper framework (part of Rails). (http://www.rubyonrails.org)
gem 'activerecord'
# Extends Sinatra with ActiveRecord helpers. (http://github.com/janko-m/sinatra-activerecord)
gem 'sinatra-activerecord'
# Documentation DSL for Sinatra (https://github.com/jillesvangurp/sinatra-docdsl)
gem 'sinatra-docdsl'
# OpenBSD's bcrypt() password hashing algorithm. (https://github.com/codahale/bcrypt-ruby)
gem 'bcrypt'
# Rake is a Make-like program implemented in Ruby (https://github.com/ruby/rake)
gem 'rake'

group :development do
  # Collection of useful Sinatra extensions (http://github.com/sinatra/sinatra-contrib)
  gem 'sinatra-contrib'
  # gem 'json_spec'
end

group :test do
  # rspec-3.4.0 (http://github.com/rspec)
  gem 'rspec'
  # Strategies for cleaning databases.  Can be used to ensure a clean state for testing. (http://github.com/DatabaseCleaner/database_cleaner)
  gem 'database_cleaner'
  # Making tests easy on the fingers and eyes (https://github.com/thoughtbot/shoulda)
  gem 'shoulda'
  # Easily handle JSON in RSpec and Cucumber (https://github.com/collectiveidea/json_spec)
  gem 'json_spec'
  # factory_girl provides a framework and DSL for defining and using model instance factories. (https://github.com/thoughtbot/factory_girl)
  gem 'factory_girl'
end
